<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/11.0.2"
            fx:controller="com.objectzilla.controller.TransactionHistoryController">
    <center>
        <TableView fx:id="transactionsTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="operationColumn" prefWidth="75.0" text="Operation date"/>
                <TableColumn fx:id="bookingColumn" prefWidth="75.0" text="Booking date"/>
                <TableColumn fx:id="titleColumn" prefWidth="75.0" text="Title"/>
                <TableColumn fx:id="nameColumn" prefWidth="75.0" text="Name"/>
                <TableColumn fx:id="accountNumberColumn" prefWidth="75.0" text="Account number"/>
                <TableColumn fx:id="amountColumn" prefWidth="75.0" text="Amount"/>
                <TableColumn fx:id="balanceColumn" prefWidth="75.0" text="Balance"/>
                <TableColumn fx:id="categoryColumn" prefWidth="75.0" text="Category"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>
    <bottom>
        <BorderPane prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <center>
                <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                    <children>
                        <Button fx:id="editButton" mnemonicParsing="false" onAction="#handleEditAction" text="Edit">
                            <VBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </VBox.margin>
                        </Button>
                        <ChoiceBox fx:id="categoryBox" prefWidth="150.0">
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </HBox.margin>
                        </ChoiceBox>
                        <Button fx:id="setCategoryButton" mnemonicParsing="false" onAction="#handleSetCategoryAction"
                                text="Set Category">
                            <VBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </VBox.margin>
                        </Button>
                        <HBox maxHeight="-Infinity" prefHeight="39.0" prefWidth="800.0">
                            <ChoiceBox fx:id="bankBox" prefWidth="150.0">
                                <HBox.margin>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                </HBox.margin>
                            </ChoiceBox>
                            <Button fx:id="openButton" mnemonicParsing="false" onAction="#handleOpenAction" text="Open">
                                <HBox.margin>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                </HBox.margin>
                            </Button>
                            <Button fx:id="clearButton" mnemonicParsing="false" onAction="#handleClearAction"
                                    text="Clear">
                                <HBox.margin>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                </HBox.margin>
                            </Button>
                        </HBox>
                    </children>
                </VBox>
            </center>
        </BorderPane>
    </bottom>
</BorderPane>
